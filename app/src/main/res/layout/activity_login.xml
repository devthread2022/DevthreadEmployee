<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.login"
    android:background="@drawable/back">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/jvt_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        android:contentDescription="logo" />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135">

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dev"
            android:id="@+id/dev"
            android:textColor="#02178A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="Thread"
            android:id="@+id/text2"
            android:textColor="@color/colortext"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169">

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee"
            android:textColor="#686868"
            android:textSize="18sp"
            android:layout_marginEnd="40dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/user_txt_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.387"
        android:background="@drawable/edittextborder"
        android:paddingLeft="10dp"
        android:fontFamily="@font/open_sans"
        android:padding="10dp"
        android:autofillHints=""
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        android:textColor="@color/colorOffBlack"
        android:textColorHint="#9E9E9E"
        android:hint="Email"/>




    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextborder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
        >
        <EditText
            android:id="@+id/user_txt_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:paddingEnd="5dp"
            android:fontFamily="@font/open_sans"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@drawable/edittextborder"
            android:paddingHorizontal="30dp"
            android:drawableStart="@drawable/custom_lock_icon"
            android:autofillHints=""
            tools:ignore="RtlSymmetry"
            android:hint="Password"
            android:textSize="15sp"
            android:textColor="@color/colorOffBlack"
            android:textColorHint="#9E9E9E"/>

        <ImageView
            android:id="@+id/show_pass_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:alpha=".5"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_remove_red_eye_24"
            tools:ignore="ContentDescription" />
    </RelativeLayout>


    <TextView
        android:id="@+id/login_txt_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:fontFamily="@font/open_sans"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.566"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.761"
        android:gravity="end"
        tools:ignore="UseCompoundDrawables">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/colorStart"
            android:textSize="18sp"
            android:layout_marginEnd="10dp"
            android:id="@+id/text_sign_in"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/buttonborder"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            android:id="@+id/user_btn_login"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>