<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Feature.featureFragment"
    android:orientation="vertical"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="4dp"
        android:background="@color/colortext">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/demo"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        android:layout_margin="7.5dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_weight="1"
                        android:layout_column="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:background="@color/colortext"
                                android:layout_gravity="end"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/demo_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Demo Request"
                                android:textSize="16sp"
                                android:textColor="@color/colorOffBlack"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ux"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        android:layout_margin="7.5dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_weight="1"
                        android:layout_column="2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:background="@color/colortext"
                                android:layout_gravity="end"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/ux_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UX Product"
                                android:textSize="16sp"
                                android:textColor="@color/colorOffBlack"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </TableRow>

            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/frontend"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_margin="7.5dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_weight="1"
                    android:layout_column="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:background="@color/colortext"
                            android:layout_gravity="end"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/front_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="16sp"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Frontend"
                            android:textSize="16sp"
                            android:textColor="@color/colorOffBlack"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/backend"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_margin="7.5dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_weight="1"
                    android:layout_column="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:background="@color/colortext"
                            android:layout_gravity="end"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/back_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="16sp"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Backend"
                            android:textSize="16sp"
                            android:textColor="@color/colorOffBlack"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/testing"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_margin="7.5dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_weight="1"
                    android:layout_column="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:background="@color/colortext"
                            android:layout_gravity="end"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/test_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="16sp"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Testing"
                            android:textSize="16sp"
                            android:textColor="@color/colorOffBlack"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/deployment"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_column="2"
                    android:layout_height="150dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_margin="7.5dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:background="@color/colortext"
                            android:layout_gravity="end"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/deploy_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="16sp"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deployment"
                            android:textSize="16sp"
                            android:textColor="@color/colorOffBlack"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>