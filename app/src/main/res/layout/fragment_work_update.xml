<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feature.WorkUpdate"
    android:orientation="vertical"
    android:background="#FBFBFB">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@color/white"
        android:elevation="1dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24_black"
            android:layout_gravity="center|start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Work Update"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/colorOffBlack"
            android:layout_gravity="center"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lines of Code Written"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorOffBlack"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/loc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="number"
                android:background="@drawable/detail_btn_back"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorOffBlack"
                android:textSize="15sp"
                android:fontFamily="@font/open_sans"
                android:padding="10dp"
                android:gravity="center"
                android:hint="Ex. 100"
                android:textColorHint="#4a4a4a"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note: You are required to commit the code everyday on your provided GitHub link for evaluation."
                android:textSize="12sp"
                android:fontFamily="@font/open_sans_light"
                android:textColor="@color/colorOffBlack"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Name"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorOffBlack"
                android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detail_btn_back"
                android:id="@+id/project"
                android:hint="Ex. DevThread"
                android:textColorHint="#4a4a4a"
                android:textColor="@color/colorOffBlack"
                android:textSize="15sp"
                android:padding="5dp"
                android:fontFamily="@font/open_sans"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What work you have done?"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorOffBlack"
                android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detail_btn_back"
                android:padding="5dp"
                android:id="@+id/work"
                android:hint="Ex. Implemented map feature"
                android:textColorHint="#4a4a4a"
                android:textColor="@color/colorOffBlack"
                android:textSize="15sp"
                android:fontFamily="@font/open_sans"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Taken"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorOffBlack"
                android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detail_btn_back"
                android:id="@+id/time"
                android:padding="5dp"
                android:textColor="@color/colorOffBlack"
                android:textSize="15sp"
                android:hint="Ex. 8 Hr."
                android:textColorHint="#4a4a4a"
                android:fontFamily="@font/open_sans"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Any Feedback"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorOffBlack"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/feed"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="number"
                android:background="@drawable/detail_btn_back"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorOffBlack"
                android:textSize="15sp"
                android:fontFamily="@font/open_sans"
                android:padding="10dp"
                android:gravity="center"
                android:hint="Provide your feedback if any"
                android:textColorHint="#4a4a4a"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:id="@+id/submit"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/open_sans"
                    android:text="Submit"
                    android:textSize="15sp"
                    android:textAllCaps="true"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>