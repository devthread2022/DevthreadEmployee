<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/listitemback"
    android:orientation="vertical"
    android:padding="7dp"
    android:elevation="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/sBack"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|end"
                    android:layout_margin="2dp"
                    app:cardCornerRadius="12.5dp"
                    app:cardBackgroundColor="@color/white">
                    <TextView
                        android:id="@+id/dStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATUS"
                        android:fontFamily="@font/open_sans"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"/>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:background="@drawable/buttonlayout"
                    android:layout_gravity="center|start"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:id="@+id/button">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update Feedback"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>
            </FrameLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:padding="4dp">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

                    <TextView
                        android:textAllCaps="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:fontFamily="@font/open_sans"
                        android:text="Request ID"
                        android:textStyle="bold"
                        android:textColor="@color/colorOffBlack"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txt_request_id"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:fontFamily="@font/open_sans"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/colorStart"
                        android:textSize="13sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:textAllCaps="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:fontFamily="@font/open_sans"
                        android:text="Customer"
                        android:textStyle="bold"
                        android:textColor="@color/colorOffBlack"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txt_customer"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:fontFamily="@font/open_sans"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:textAllCaps="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Email"
                        android:fontFamily="@font/open_sans"
                        android:textStyle="bold"
                        android:textColor="@color/colorOffBlack"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txt_email"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:fontFamily="@font/open_sans"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:textAllCaps="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:fontFamily="@font/open_sans"
                        android:text="Mobile"
                        android:textStyle="bold"
                        android:textColor="@color/colorOffBlack"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txt_mobile"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:fontFamily="@font/open_sans"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:textAllCaps="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="M Date"
                        android:fontFamily="@font/open_sans"
                        android:textStyle="bold"
                        android:textColor="@color/colorOffBlack"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="0dp"
                        android:fontFamily="@font/open_sans"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:textAllCaps="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/open_sans"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="M Time"
                        android:textStyle="bold"
                        android:textColor="@color/colorOffBlack"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:fontFamily="@font/open_sans"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:textAllCaps="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:fontFamily="@font/open_sans"
                        android:text="Demo Type"
                        android:textStyle="bold"
                        android:textColor="@color/colorOffBlack"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txt_dType"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="end"
                        android:fontFamily="@font/open_sans"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:textAllCaps="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="C Address"
                        android:fontFamily="@font/open_sans"
                        android:textStyle="bold"
                        android:textColor="@color/colorOffBlack"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:fontFamily="@font/open_sans"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:textAllCaps="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Reference"
                        android:fontFamily="@font/open_sans"
                        android:textStyle="bold"
                        android:textColor="@color/colorOffBlack"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txt_reference"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:fontFamily="@font/open_sans"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:textAllCaps="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:fontFamily="@font/open_sans"
                        android:text="Idea Type"
                        android:textStyle="bold"
                        android:textColor="@color/colorOffBlack"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txt_type"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:fontFamily="@font/open_sans"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="13sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:textAllCaps="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="D Product"
                        android:fontFamily="@font/open_sans"
                        android:textStyle="bold"
                        android:textColor="@color/colorOffBlack"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txt_product"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="end"
                        android:fontFamily="@font/open_sans"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="13sp"/>
                </TableRow>
            </TableLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="@color/colortext"
                    android:layout_gravity="center|start"/>
                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="@color/colortext"
                    android:layout_gravity="center|end"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Feedback"
                    android:fontFamily="@font/open_sans_light"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colortext"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback Pending.."
                android:textSize="12sp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorOffBlack"
                android:layout_margin="5dp"
                android:justificationMode="inter_word"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>