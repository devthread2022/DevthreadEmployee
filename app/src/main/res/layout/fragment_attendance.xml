<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feature.Attendance"
    android:orientation="vertical"
    android:background="#FBFBFB">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@color/white"
        android:elevation="1dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24_black"
            android:layout_gravity="center|start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark Your Attendance"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/colorOffBlack"
            android:layout_gravity="center"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/work_update"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_column="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From Date"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/colorOffBlack"
                            android:layout_marginTop="5dp"/>
                        <EditText
                            android:id="@+id/from_date"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:drawableStart="@drawable/ic_baseline_calendar_month_24_cal"
                            android:padding="5dp"
                            android:textColor="@color/colorOffBlack"
                            android:textSize="14sp"
                            android:textColorHint="@color/colorOffBlack"
                            android:fontFamily="@font/open_sans"
                            android:hint="13 Jan 2022"
                            android:drawablePadding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/attendance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_column="2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To Date"
                            android:layout_marginStart="4dp"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/colorOffBlack"
                            android:layout_marginTop="5dp"/>
                        <EditText
                            android:id="@+id/to_date"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="4dp"
                            android:drawableStart="@drawable/ic_baseline_calendar_month_24_cal"
                            android:padding="5dp"
                            android:textColor="@color/colorOffBlack"
                            android:textSize="14sp"
                            android:textColorHint="@color/colorOffBlack"
                            android:fontFamily="@font/open_sans"
                            android:hint="13 Jan 2022"
                            android:drawablePadding="5dp"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginTop="10dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_column="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From Time"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/colorOffBlack"
                            android:layout_marginTop="5dp"/>
                        <EditText
                            android:id="@+id/from_time"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:drawableStart="@drawable/ic_baseline_access_alarm_24"
                            android:padding="5dp"
                            android:textColor="@color/colorOffBlack"
                            android:textSize="14sp"
                            android:textColorHint="@color/colorOffBlack"
                            android:fontFamily="@font/open_sans"
                            android:hint="08:00"
                            android:editable="false"
                            android:drawablePadding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_column="2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To Time"
                            android:layout_marginStart="4dp"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/colorOffBlack"
                            android:layout_marginTop="5dp"/>
                        <EditText
                            android:id="@+id/to_time"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="4dp"
                            android:drawableStart="@drawable/ic_baseline_access_alarm_24"
                            android:padding="5dp"
                            android:textColor="@color/colorOffBlack"
                            android:textSize="14sp"
                            android:textColorHint="@color/colorOffBlack"
                            android:fontFamily="@font/open_sans"
                            android:hint="17:15"
                            android:editable="false"
                            android:drawablePadding="5dp"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am able to work"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorOffBlack"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:text="YES"
                    android:id="@+id/able_yes"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:text="NO"
                    android:id="@+id/able_no"
                    android:layout_marginStart="15dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/for_the_purpose_of_business"
                android:justificationMode="inter_word"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorOffBlack"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="As per our record your present address is:"
                android:justificationMode="inter_word"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorOffBlack"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Village Gotwa Post Katya Dis. Basti 272302 UP"
                android:justificationMode="inter_word"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorOffBlack"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you residing today in this location"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorOffBlack"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:text="YES"
                    android:id="@+id/reside_yes"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:text="NO"
                    android:id="@+id/reside_no"
                    android:layout_marginStart="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/loactionLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provide Your Location"
                    android:textSize="13sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/colorOffBlack"
                    android:layout_marginTop="5dp"/>
                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="number"
                    android:background="@drawable/detail_btn_back"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"
                    android:padding="10dp"
                    android:gravity="center"
                    android:hint="Enter your loaction please."
                    android:textColorHint="#4a4a4a"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To be approved by"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorOffBlack"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/approved_by"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:padding="5dp"
                android:textColor="@color/colorOffBlack"
                android:textSize="14sp"
                android:textColorHint="@color/colorOffBlack"
                android:fontFamily="@font/open_sans"
                android:hint="admin@mail.com"
                android:enabled="false"
                android:clickable="false"
                android:editable="false"
                android:drawablePadding="5dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:id="@+id/submit"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/open_sans"
                    android:text="Submit"
                    android:textSize="15sp"
                    android:textAllCaps="true"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>