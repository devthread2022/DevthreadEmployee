<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/colortext"/>
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFAF1">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/pro_i"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deadline"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deadline"
                    android:fontFamily="@font/open_sans"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priority"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRIORITY"
                    android:fontFamily="@font/open_sans"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
            </LinearLayout>


        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="5dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp">
                <TextView
                    android:id="@+id/project_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROJECTID"
                    android:fontFamily="@font/open_sans"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOffBlack"
                    android:layout_gravity="center|start"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Name"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/project_domain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Domain"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assignee"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="12sp"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/assignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assignee Name"
                    android:textColor="@color/colorOffBlack"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans_semibold"/>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Details"
                    android:fontFamily="@font/open_sans"
                    android:textSize="14sp"
                    android:textColor="@color/colorOffBlack"
                    android:layout_gravity="center|start"/>
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/l_back"
                    android:layout_marginTop="5dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work Status"
                        android:textSize="14sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>