<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Feature.Profile"
    android:orientation="vertical"
    android:background="@color/colorEnd">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:elevation="4dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24_white"
            android:layout_gravity="center|start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:elevation="1dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:civ_circle_background_color="@color/white"
                app:civ_border_width="0dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/img"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_verified_24"
                android:layout_gravity="bottom|end"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_back"
            android:layout_marginTop="60dp"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vimal Kumar Gupta"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:textColor="@color/colorOffBlack"
                android:textSize="20sp"
                android:fontFamily="@font/open_sans_semibold"/>
            <TextView
                android:id="@+id/regId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTRATIONID001"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/open_sans"
                android:textSize="13sp"
                android:textColor="@color/colorOffBlack"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/open_sans"
                android:textSize="13sp"
                android:textColor="@color/colorOffBlack"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="#F1F1F1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/github"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:id="@+id/git"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GitHub Link"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/colorOffBlack"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="#F1F1F1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/university"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:id="@+id/university"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="University"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/colorOffBlack"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="#F1F1F1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/address"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/colorOffBlack"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="#F1F1F1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/email_add"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/colorOffBlack"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="#F1F1F1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/call_number"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/colorOffBlack"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>